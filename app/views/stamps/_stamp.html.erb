<div id="stamp_<%= stamp.id %>" class="card stamp-card">
  <div class="card-image">
    <%= image_tag Dir.new(Rails.root.to_s + '/app/assets/images').to_a.select{|f|    f.downcase.match(/\.jpg|\.jpeg|\.png/) }.sample, class: "img-responsive" %>
  </div>
  <div class="speaker-wrapper">
    <div class='speaker'><%= stamp.speaker %></div>
  </div>
  <div class="stamp-header">
    <%= link_to stamp.user, class: "avatar-link" do %>
      <%= gravatar_for(stamp.user, class: "user-avatar") %>
    <% end %>
    <div class="stamp-details">
      <div class="stamp-user">
        <%= link_to "#{stamp.user.username}", stamp.user  %>
      </div>
      <div class="stamp-date">
        <%= time_ago_in_words(stamp.created_at) %> ago
      </div>
    </div>
  </div>
  <div class="card-content">
      <p><%= stamp.quote %></p>
  </div>
  <div  data-toggle="collapse" data-target="#s_<%= stamp.id %>" class="card-footer">
    <div class="progress">
      <div class="progress-bar progress-bar-success" style="width: <%= stamp.average*100 %>%" data-toggle="tooltip" title="<%= stamp.average*100 %>%">
      </div>
      <div class="progress-bar" style="width: <%= 100-stamp.average*100 %>%" data-toggle="tooltip" title="<%= 100-stamp.average*100 %>%">
      </div>
    </div>
    <div class="bet-details">

      <div class="bet-single-detail">
        <%= icon(:calendar) %> <%= distance_of_time_in_words(Time.now, stamp.completion_date) %> left
      </div>
      <div class="bet-single-detail" data-toggle="tooltip" title="Current Pot">
        <%= icon(:bank) %> <%= stamp.pot %>
      </div>
      <div class="bet-single-detail" data-toggle="tooltip" title="Betters">
        <%= icon(:users) %> <%= stamp.bets.count %>
      </div>
    </div>
  </div>
  <div id="s_<%= stamp.id %>" class="collapse">
    <div class="card-action">
      <form class="form-inline">
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon">$</div>
            <input type="text" class="form-control" id="exampleInputAmount" placeholder="Wager">
          </div>
        </div>
        <div class="btn-group btn-toggle">
          <button class="btn btn-sm btn-default">YES</button>
          <button class="btn btn-sm btn-primary active">NO</button>
        </div>
        <button type="submit" class="btn btn-primary">Bet</button>
      </form>
    </div>
  </div>
</div>
