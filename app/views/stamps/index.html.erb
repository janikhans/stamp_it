<h1>Stamps</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>User</th>
      <th>Speaker</th>
      <th>Outcome</th>
      <th>Proof</th>
      <th>Quote</th>
      <th>Completed?</th>
      <th>Pot</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stamps.each do |stamp| %>
      <tr>
        <td><%= stamp.user.email %></td>
        <td><%= stamp.speaker %></td>
        <td><%= stamp.outcome %></td>
        <td><%= truncate(stamp.proof) %></td>
        <td><%= stamp.quote %></td>
        <td><%= stamp.completed? %></td>
        <td><%= stamp.pot %></td>
        <td><%= stamp.percent_true %></td>
        <td><%= link_to 'Show', stamp %></td>
        <td><%= link_to 'Edit', edit_stamp_path(stamp) %></td>
        <td><%= link_to 'Destroy', stamp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Stamp', new_stamp_path %>
