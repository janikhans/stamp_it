<div class="row">
	<div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
		<div class="card card-auth">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
				<div class="header header-primary text-center">
					<h3>Change Password</h3>
					<div class="social-line">
						<a href="#pablo" class="btn btn-just-icon">
							<i class="fa fa-facebook-square"></i>
						</a>
						<a href="#pablo" class="btn btn-just-icon">
							<i class="fa fa-twitter"></i>
						</a>
						<a href="#pablo" class="btn btn-just-icon">
							<i class="fa fa-google-plus"></i>
						</a>
					</div>
				</div>
				<div class="content">
          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>
          <div class="input-group">
            <span class="input-group-addon"><%= f.label :username do %><i class="material-icons">lock_outline</i><% end %></span>
            <%= f.input :password, required: true, class: "form-control", placeholder: "New Password...", label: false %>
          </div>
          <div class="input-group">
            <span class="input-group-addon"><%= f.label :username do %><i class="material-icons">lock</i><% end %></span>
            <%= f.input :password_confirmation, required: true, class: "form-control", placeholder: "Confirmation Password...", label: false %>
          </div>
        </div>
				<div class="card-footer text-center">
					<%= f.button :submit, "Change My Password", class: "btn btn-primary btn-raised" %>
				</div>
      <% end %>
	  </div>
  </div>
</div>
