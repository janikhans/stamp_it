<div class="row">
	<div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
		<div class="mat-card card-auth">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
				<div class="header header-primary text-center">
					<h3>Forgot password?</h3>
					<div class="social-line">
						<a href="#pablo" class="btn btn-just-icon">
							<i class="fa fa-facebook-square"></i>
						</a>
						<a href="#pablo" class="btn btn-just-icon">
							<i class="fa fa-twitter"></i>
						</a>
						<a href="#pablo" class="btn btn-just-icon">
							<i class="fa fa-google-plus"></i>
						</a>
					</div>
				</div>
				<div class="content">
          <div class="input-group">
            <span class="input-group-addon"><%= f.label :email do %><i class="material-icons">email</i><% end %></span>
            <%= f.input :email, required: true, autofocus: true, class: "form-control", label: false, placeholder: "Email..." %>
          </div>
        </div>
				<div class="card-footer text-center">
					<%= f.button :submit, "Send Instructions", class: "btn btn-primary btn-raised" %>
          <%= link_to "Already have an account?", new_user_session_path %>
				</div>
      <% end %>
	  </div>
  </div>
</div>
