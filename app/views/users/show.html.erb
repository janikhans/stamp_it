<div class="row small-gutter">
  <div class="col-md-3">
    <%= render 'shared/profile' %>
    <% if @user.bets.any? %>
      <div class="card clear-card">
          <div class="card-content">
            <h4>Recent Bets</h4>
              <ul class="payout-list">
                <% @user.bets.each do |b| %>
                  <li>Wager: <%= link_to "#{b.wager}", b.stamp %></li>
                <% end %>
              </ul>
          </div>
          <div class="card-action">
              <%= link_to "All Bets", bets_path %>
          </div>
      </div>
    <% end %>

    <% if @user.payouts.any? %>
      <div class="card clear-card">
          <div class="card-content">
            <h4>Recent Payouts</h4>
              <ul class="payout-list">
                <% @user.payouts.each do |p| %>
                  <li>Payout: <%= link_to "#{p.amount}", p.stamp %></li>
                <% end %>
              </ul>
          </div>
          <div class="card-action">
              <%= link_to "All Payouts", @user %>
          </div>
      </div>
    <% end %>

  </div>
  <div class="col-md-6">
    <%= render @stamps %>
  </div>
  <div class="col-md-3">
    <%= render 'shared/trending' %>
    <%= render 'shared/who_to_follow' %>
  </div>
</div>
